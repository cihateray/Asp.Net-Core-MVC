@model proje3.Data.Models.Food
@{
    ViewData["Title"] = "FoodAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Food Add Page</h1>
<br />
@using (Html.BeginForm("FoodAdd", "Food", FormMethod.Post))
{
    @Html.Label("Food Name")
    @Html.TextBoxFor(x => x.FoodName, new { @class = "form-control", @required = "required" })
    <br />
    @Html.Label("Food Price")
    @Html.TextBoxFor(x => x.FoodPrice, new { @class = "form-control", @required = "required" })
    <br />
    @Html.Label("Food Stock")
    @Html.TextBoxFor(x => x.FoodStock, new { @class = "form-control", @required = "required" })
    <br />
    @Html.Label("Food Image")
    @Html.TextBoxFor(x => x.FoodImageUrl, new { @class = "form-control", @required = "required" })
    <br />
    @Html.Label("Category Name")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
    <br />
    @Html.Label("Food Description")
    @Html.TextAreaFor(x => x.FoodDescription, new { @class = "form-control", @required = "required" })
    <br />

    <button class="btn btn-primary">Save</button>
}

